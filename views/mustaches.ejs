<script type="text/html" class="t-alert">
    <div id="{{id}}" class="alert alert-block">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h4>{{head}}</h4>
        {{text}}
    </div>
</script>
<script type="text/html" class="t-wiki">
<ul class="breadcrumb">
    <li>
        <a href="/">Wiki</a>
        <span class="divider">/</span>
    </li>
    {{#breadCrumbs}}
    <li {{#last}}class="active"{{/last}}>
        <a class="wiki-link" href="/wiki/{{id}}">{{header}}</a>
        <span class="divider {{#last}}hide{{/last}}">/</span>
    </li>
    {{/breadCrumbs}}

    <div class="btn-group wiki-tools pull-right btn-group-wiki-controls">
        <a class="btn btn-wiki-add-child" href="#"><i class="icon-plus"></i> Добавить подстраницу</a>
        <a class="btn btn-wiki-edit" data-act="edit" href="#"><i class="icon-pencil"></i> Редактировать</a>
        <a class="btn btn-wiki-remove" href="#"><i class="icon-remove"></i> Удалить</a>
    </div>
</ul>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12 wiki-article">
            <h1>{{header}}</h1>
            {{#children.length}}
                <div class ="wiki-children">
                    <h5>Дочерние статьи:</h5>
                    {{#children}}
                        <a class="wiki-link" href="/wiki/{{id}}">{{header}}</a><br>
                    {{/children}}
                </div>
            {{/children.length}}
            <div class="wiki-article-text">
            </div>

        </div>
    </div>
    <form class="wiki-editor">
    <a class="btn btn-wiki-edit btn-success" data-act="save" href="#">
        <i class="icon-ok icon-white"></i> Сохранить
    </a>
    <a class="btn btn-wiki-dont-edit btn-danger" href="#">
        Не сохранять
    </a>
    <br>
    <br>

        <input name="header" class="span12 wiki-header-edit" type="text" value="{{header}}">
        <textarea name="text" class="span12">{{text}}</textarea>
    </form>
    <form class="wiki-new-page">
        <a class="btn btn-wiki-add-child  btn-primary" href="#">Добавить</a>
        <a class="btn btn-danger btn-wiki-dont-add-child" href="#">Не добавлять</a>
        <br><br>
        <input name="parent" type="hidden" value="{{id}}">
        <input name="header" class="span12 wiki-header-edit" type="text" placeholder="Заголовок">
        <textarea name="text" class="span12" placeholder="Какой-то умный текст..."></textarea>
    </form>
</div>
</script>